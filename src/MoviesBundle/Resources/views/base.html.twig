    {%  for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {%  endfor %}

    {% block content %}{% endblock %}

    <hr>

    <footer>
        <table>
            <tr>
                <td><a href="">Accueil</a></td>
                <td><a href="">FAQ</a></td>
                <td><a href="">CGU</a></td>
            </tr>
            <tr>
                <td><a href="">À propos</a></td>
                <td><a href="{{ path('movie_admin') }}">Gérer films</a></td>
            </tr>
            <tr>
                {% if app.user %}
                    <td><a href="">Mon compte</a></td>
                    <td><a href="">Déconnexion</a></td>
                {% else %}
                    <td><a href="">Connexion</a></td>
                    <td><a href="">Inscription</a></td>
                {% endif %}
            </tr>
        </table>
    </footer>
</div>
</body>
</html>